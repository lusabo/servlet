<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE urlrewrite
    PUBLIC "-//tuckey.org//DTD UrlRewrite 4.0//EN"
    "http://www.tuckey.org/res/dtds/urlrewrite4.0.dtd">

<urlrewrite use-query-string="true">

	<rule>
		<from>(.+)\.html</from>
		<set type="status">404</set>
		<to>null</to>
	</rule>

	<rule>
		<from>^/home$</from>
		<to>/home.jsp</to>
	</rule>

	<rule>
		<from>^/bookmark-list$</from>
		<to>/bookmark-list.jsp</to>
	</rule>

	<rule>
		<from>^/bookmark-new$</from>
		<to>/bookmark-new.jsp</to>
	</rule>

	<!-- 
	http://urlrewritefilter.googlecode.com/svn/trunk/src/doc/manual/4.0/guide.html
	<rule>
		<from>^/products/([0-9]+)$</from>
		<to>/products/index.jsp?product_id=$1</to>
	</rule>
	-->
	
	<rule>
		<from>^/bookmark-edit/([0-9]+)$</from>
		<to>/bookmark-edit.jsp?id=$1</to>
	</rule>
 
	<rule>
		<from>^/$</from>
		<to type="redirect">%{context-path}/home</to>
	</rule>
	<rule>
		<from>^/(.+)/$</from>
		<to type="redirect">%{context-path}/$1</to>
	</rule>

</urlrewrite>
